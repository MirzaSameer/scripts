/*
==================================================
 SQL Server Baseline Check Script
==================================================
*/

PRINT '--- ðŸ”Ž Checking Parallelism Settings ---';
EXEC sp_configure 'show advanced options';
EXEC sp_configure 'max degree of parallelism';
EXEC sp_configure 'cost threshold for parallelism';

PRINT '--- ðŸ”Ž Checking Memory Settings ---';
EXEC sp_configure 'max server memory (MB)';
EXEC sp_configure 'min server memory (MB)';

PRINT '--- ðŸ”Ž Checking TempDB Files ---';
USE tempdb;
GO
SELECT 
    name AS FileName,
    physical_name AS FilePath,
    size/128 AS SizeMB,
    growth/128 AS GrowthMB,
    type_desc AS FileType
FROM sys.database_files;

PRINT '--- ðŸ”Ž Checking TempDB Space Usage ---';
DBCC SQLPERF(LOGSPACE);

PRINT '--- ðŸ”Ž Checking File Stats ---';
DBCC SHOWFILESTATS;
GO

PRINT 'âœ… Baseline check completed';
